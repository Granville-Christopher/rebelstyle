<script>
    function showNotification(message) {
        // Create a new div element for the notification
        const notification = document.createElement('div');
        notification.className = 'notification-popup';
        notification.innerText = message;

        // Append the notification to the body
        document.body.appendChild(notification);

        // Set a timeout to remove the notification after 3 seconds
        setTimeout(() => {
            notification.remove();
        }, 3000);
    }

    function addToCart(id, name, price, image, seller, sellerId) {

        // Get the current cart from sessionStorage or initialize it
        let cart = JSON.parse(sessionStorage.getItem('cart')) || [];
        let quan = document.getElementById(`qty-${id}`).value
        
        // Check if the item is already in the cart
        const existingItemIndex = cart.findIndex(item => item.id === id);
        
        if (existingItemIndex !== -1) {
            // If item exists, increase the quantity
            cart[existingItemIndex].quantity += 1;
        } else {
            // If item doesn't exist, add it with initial quantity of 1
            cart.push({
                id: id,
                name: name,
                price: price,
                image: image,
                quantity: quan,
                seller: seller,
                sellerId: sellerId
            });
        }
        
        // Save the updated cart back to sessionStorage
        sessionStorage.setItem('cart', JSON.stringify(cart));
        
        // Optionally, show a message to the user
        showNotification('Item added to cart');
    }

