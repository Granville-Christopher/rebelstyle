<%- include("partials/header.ejs") %>


    <section class="hero collections-hero">
        <div class="container">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Admin</li>
                </ol>
            </nav>
            <h1>Admin Interface</h1>
        </div>
    </section>
    <style>
        .seller {
            margin-top: 100px;
            padding: 2px;
            width: 50%;
        }
    </style>
    <div class="tab-container align-items-center">
        <div class="tab-header justify-content-center flex-fill">
            <a href="/admin/sellers"><button class="tab-button">Sellers</button></a>
            <a href="/admin/users"><button class="tab-button active">Users</button></a>
        </div>
        <div id="tab2" class="tab-content active">

            <div class=" mt-2 d-none d-md-flex">
                <div class="container">
                    <h4>Total number of Registered Users: </h4>
                    <table class="table table-striped table-bordered">
                        <thead class="table-dark">
                            <tr>
                                <th scope="col">First Name</th>
                                <th scope="col">Last Name</th>
                                <th scope="col">Email</th>
                                <th scope="col">Phone number</th>
                                <th scope="col">Address</th>
                                <th scope="col">action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (users.length> 0) { %>
                                <% users.forEach((user, userindex)=> { %>
                                    <tr>
                                        <td><%= user.Fname %></td>
                                        <td><%= user.Lname %></td>
                                        <td><%= user.email %></td>
                                        <td><%= user.phone %></td>
                                        <td><%= user.address %> </td>
                                        <td>
                                            <% if (user.block == true) { %>
                                                <a href="/admin/unblockuser/<%=  user._id %> " class="btn btn-success">unblock</a>
                                            <% } else { %>
                                                <a href="/admin/blockuser/<%=  user._id %> " class="btn btn-primary">block</a>
                                            <% } %>

                                            <a href="/admin/deleteuser/<%=  user._id %> " class="btn btn-danger">delete</a>
                                        </td>
                                    </tr>
                                <% }) %>
                            <% } else { %>
                                <tr>
                                    <p>no account created...</p>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>

            </div>

