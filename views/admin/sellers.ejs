<%- include("partials/header.ejs") %>


    <section class="hero collections-hero">
        <div class="container">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Admin</li>
                </ol>
            </nav>
            <h1>Admin Interface</h1>
        </div>
    </section>
    <style>
        .seller {
            margin-top: 100px;
            padding: 2px;
            width: 50%;
        }
    </style>
    <div class="tab-container align-items-center">
        <div class="tab-header justify-content-center flex-fill">
            <a href="/admin/sellers"><button class="tab-button active">Sellers</button></a>
            <a href="/admin/users"><button class="tab-button">Users</button></a>
        </div>
        <div id="tab1" class="tab-content active">

            <div class=" mt-2 d-none d-md-flex">
                <div class="container">
                    <h4>Total number of Registered Sellers: </h4>
                    <table class="table table-striped table-bordered">
                        <thead class="table-dark">
                            <tr>
                                <th scope="col">First Name</th>
                                <th scope="col">Last Name</th>
                                <th scope="col">Email</th>
                                <th scope="col">Phone number</th>
                                <th scope="col">Address</th>
                                <th scope="col">action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (sellers.length> 0) { %>
                                <% sellers.forEach((seller, sellerindex)=> { %>
                                    <tr>
                                        <td><%= seller.Fname %></td>
                                        <td><%= seller.Lname %></td>
                                        <td><a class="text-primary" href="/admin/seller/<%=  seller._id %>"><%= seller.email %></a></td>
                                        <td><%= seller.phone %></td>
                                        <td><%= seller.address %> </td>
                                        <td>
                                            <% if (seller.block == true) { %>
                                                <a href="/admin/unblockseller/<%=  seller._id %> " class="btn btn-success">unblock</a>
                                            <% } else { %>
                                                <a href="/admin/blockseller/<%=  seller._id %> " class="btn btn-primary">block</a>
                                            <% } %>

                                            <a href="/admin/deleteseller/<%=  seller._id %> " class="btn btn-danger">delete</a>
                                        </td>
                                    </tr>
                                <% }) %>
                            <% } else { %>
                                <tr>
                                    <td>No Account Created</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>

                </div>

            </div>

            <!-- small screen -->

            <!-- small screen -->
            <div class="row mt-3 d-flex d-md-none">
                <div class="container">
                    <b>Total number of Registered Sellers: </b>
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered ">
                            <thead class="table-dark">
                                <tr>
                                    <th scope="col">First Name</th>
                                    <th scope="col">Last Name</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Phone number</th>
                                    <th scope="col">Address</th>
                                    <th scope="col">action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (sellers.length> 0) { %>
                                    <% sellers.forEach((seller, sellerindex)=> { %>
                                        <tr>
                                            <td><%= seller.Fname %></td>
                                            <td><%= seller.Lname %></td>
                                            <td><%= seller.email %></td>
                                            <td><%= seller.phone %></td>
                                            <td><%= seller.address %> </td>
                                            <td>
                                                <% if (seller.block == true) { %>
                                                    <a href="/admin/unblockseller/<%=  seller._id %> " class="btn btn-success mt-2">unblock</a>
                                                <% } else { %>
                                                    <a href="/admin/blockseller/<%=  seller._id %> " class="btn btn-primary mt-2">block</a>
                                                <% } %>
    
                                                <a href="/admin/deleteseller/<%=  seller._id %> " class="btn btn-danger">delete</a>
                                            </td>
                                        </tr>
                                    <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td>No Account Created</td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!-- small screen end -->

        </div>

    </div>

    <%- include("partials/footer.ejs") %>