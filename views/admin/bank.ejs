<%- include("partials/header.ejs") %>

    <section class="hero login-hero">
        <div class="container">
            
            <h1>BANK ACCOUNT</h1>
            <p>Edit Bank Account Details</p>
           
        </div>
    </section>

    <div class="container">
        <div class="row mt-5">
            <div class="col-md-12">
                <h4>Edit Bank Account Details</h4>
                <form action="/admin/bank" method="POST" class="signup">
                <%- include("partials/alert.ejs") %>
                    <div class="row p-2">
                        <div class="form-group col-md-6 p-2">
                            <label for="">Bank Name</label>
                            <input type="text" id="Fname" name="bankName" class="form-control" value="<%= bank.bankName || '' %>">
                        </div>
        
                        <div class="form-group col-md-6 p-2">
                            <label for="">Bank Account Name</label>
                            <input type="text" id="Lname" name="bankAccount" class="form-control" value="<%= bank.bankAccount || '' %>">
                        </div>
                    </div>
        
                    <div class=" row p-2">
                        <div class="form-group p-2">
                            <label for="">Bank Account Number</label>
                            <input type="text" id="email" name="bankAccountNumber" class="form-control" value="<%= bank.bankAccountNumber || '' %>">
                        </div>        
                    </div>        
        
                    <div class="p-1">
                        <button class=" iiiiii btn btn-danger" type="submit">Edit Bank Details</button>
        
                    </div>
        
        
                </form>
            </div>
        </div>
    </div>


    <%- include("partials/footer.ejs") %>