<%- include("partials/header.ejs") %>

    <section class="hero login-hero">
        <div class="container">
            
            <h1>SELLER PROFILE</h1>
            <p>Edit Seller Account</p>
           
        </div>
    </section>

    <div class="container">
        <div class="row mt-5">
            <div class="col-md-12">
                <h4>Edit Account Details</h4>
                <form action="/seller/profileedit" method="POST" class="signup">
                <%- include("partials/alert.ejs") %>
                    <div class="row p-2">
                        <div class="form-group col-md-6 p-2">
                            <input type="text" id="Fname" name="Fname" class="form-control" value="<%= seller.Fname %>">
                            <input type="hidden" id="id" name="id" value="<%= seller._id %>">
                        </div>
        
                        <div class="form-group col-md-6 p-2">
                            <input type="text" id="Lname" name="Lname" class="form-control" value="<%= seller.Lname %>">
                        </div>
                    </div>
        
                    <div class=" row p-2">
                        <div class="form-group p-2">
                            <input type="email" id="email" name="email" readonly class="form-control" value="<%= seller.email %>">
                        </div>
        
                        <div class="form-group p-2">
                            <input type="tel" id="phone" name="phone" class="form-control" value="<%= seller.phone %>">
                        </div>
        
                        <div class="form-group p-2">
                            <input type="text" id="address" name="address" class="form-control" value="<%= seller.address %>">
                        </div>
        
                    </div>
        
                    <div class="row p-2">
                        <div class="form-group p-2 col-md-4">
                            <input type="text" id="city" name="city" class="form-control" value="<%= seller.city %>">
                        </div>
        
                        <div class="form-group p-2 col-md-4">
                            <input type="text" id="state" name="state" class="form-control" value="<%= seller.state %>">
                        </div>
        
                        <div class="form-group p-2 col-md-4">
                            <input type="text" id="zip" name="zip" class="form-control" value="<%= seller.zip %>">
                        </div>
        
                    </div>
        
                    <div class="row p-2">
                        <div class="form-group p-2 col-md-4">
                            <label for="">Bank Name</label>
                            <input type="text" id="city" name="bankName" class="form-control" value="<%= seller.bankName %>">
                        </div>
        
                        <div class="form-group p-2 col-md-4">
                            <label for="">Bank Account Name</label>
                            <input type="text" id="state" name="bankAccountName" class="form-control" value="<%= seller.bankAccountName %>">
                        </div>
        
                        <div class="form-group p-2 col-md-4">
                            <label for="">Bank Account Number</label>
                            <input type="text" id="zip" name="bankAccountNumber" class="form-control" value="<%= seller.bankAccountNumber %>">
                        </div>
        
                    </div>
        
        
                    <div class="p-1">
                        <button class=" iiiiii btn btn-danger" type="submit">Edit Account</button>
        
                    </div>
        
        
                </form>
            </div>
        </div>
        <div class="row mt-5">
            <div class="col-md-12">
                <h4>Edit Password</h4>
                <form action="/seller/passwordedit" method="POST" class="signup">
                    
                    <div class="row p-2">
                        <div class="form-group p-2 ">
                            <label for="">Password</label>
                            <input type="password" id="password" name="password" class="form-control" value="password">
                            <input type="hidden" id="id" name="id" value="<%= seller._id %>">
                        </div>
                    </div>
                    
                    <div class="row p-2">
                        <div class="form-group p-2 ">
                            <label for="">Confirm Password</label>
                            <input type="password" id="password" name="cpassword" class="form-control" value="password">
                        </div>
                    </div>
        
        
                    <div class="p-1">
                        <button class=" iiiiii btn btn-danger" type="submit">Edit Password</button>
        
                    </div>
        
        
                </form>
            </div>
        </div>
    </div>


    <%- include("partials/footer.ejs") %>